<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="11.75"
        android:gravity="center"
        android:background="@color/titlebg"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="gist.telecontrol.MainActivity">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/apptheme"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="13.5"
        android:elevation="12dp"
        android:background="@drawable/rectshape">
        <View
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="10dp">
        </View>
    </LinearLayout>
    <fragment
        android:name="gist.telecontrol.InfoFragment"
        android:id="@+id/infoFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        tools:layout="@layout/fragment_info"/>
    <LinearLayout
        android:id="@+id/mLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="11"
        android:background="@drawable/rectshape2"
        android:elevation="8dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/multizone"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="12"
        android:background="@drawable/rectshape3"
        android:padding="10dp"
        android:elevation="6dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="10dp"
                android:background="@drawable/searcher"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:padding="5dp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/connect"
                android:elevation="10dp"
                android:background="@drawable/ipbutton"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
